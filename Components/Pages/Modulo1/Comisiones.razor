                .OrderByDescending(m => m.CreatedAt)  // Ordenar por fecha de creaci贸n descendente
                .Take(5)  // Tomar las 5 primeras multas
                .ToList();
        }
        catch (Exception ex)
        {
            // Imprimir la excepci贸n en la consola (para prop贸sitos de depuraci贸n)
            Console.WriteLine(ex);
            // Manejar el error si es necesario
        }
    }
}
