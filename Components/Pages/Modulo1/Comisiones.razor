    }

    h2 {
        color: #333;
        margin-bottom: 24px;
        text-align: center;
        font-size: 24px;
    }

    .panels-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 24px;
        margin-bottom: 24px;
    }

    .total-panel {
        background: linear-gradient(135deg, #03ad41, #35bd5e);
        padding: 24px;
        border-radius: 8px;
        color: white;
    }

    .total-content {
        text-align: center;
    }

    .amount {
        font-size: 48px;
        font-weight: bold;
        margin: 16px 0;
        cursor: pointer;
        transition: transform 0.3s ease, background-color 0.3s ease; /* Efecto suave */
    }
    .amount:hover{
        transform: scale(1.1); /* Agranda el bot贸n un 10% */
    }

    .period {
        font-size: 18px;
        opacity: 0.9;
    }

    .stats-panel {
        background: #f8f9fa;
        padding: 24px;
        border-radius: 8px;
    }

    .stats-grid {
